
.plans
  desktop()
  padding 100px 0
  > .plan
    float left
    width 33.33333%
    &:nth-child(2)
      > .inner
        background-color c_black2
        color c_white1
        > .other > .save
          border-left 1px solid c_white1
      > .pointer
        border-color c_black2 transparent transparent transparent

    > .inner
      background-color c_blue1
      padding 40px 0 60px 0
      > .title
        font f_h1
        text-transform uppercase
        text-align center

      > .price
        width 120px
        margin auto
        > .dollar
          float left
          font f_h2
          margin 30px 0 0 0
        > .integer
          font f_h0
          float left
        > .decimal
          font f_h1
          float left
          margin 20px 0 0 0px
        > .copy
          float left
          margin -65px 0 0 65px
      > .other
        width 150px
        margin auto
        > .year
          float left
          padding 0 10px 0 0
          > .price
            font f_copyb
          > .copy
            text-transform uppercase
        > .save
          float right
          border-left 1px solid c_black2
          padding 10px 0 10px 10px

    > .pointer
      width 0
      height 0
      border-style solid
      border-width 20px 20px 0 20px
      border-color c_blue1 transparent transparent transparent
      margin auto

    > .cta
      cursor pointer
      background-color c_blue1
      color c_white1
      border-radius 10px
      padding 15px
      width 200px
      margin 20px auto
      text-align center
      text-transform uppercase
      font f_h3
    > .copy
      text-align center
      width 200px
      margin auto

